ALTER TABLE `documents` ADD `slug` VARCHAR(100) NOT NULL AFTER `title`;

CREATE TABLE `agriarbor2`.`metadata` ( `id` INT NOT NULL AUTO_INCREMENT ,  `document_id` INT NOT NULL ,  `slug` VARCHAR(100) NOT NULL ,  `keywords` VARCHAR(500) NOT NULL ,  `description` VARCHAR(500) NOT NULL ,  `active` TINYINT NOT NULL ,    PRIMARY KEY  (`id`)) ENGINE = InnoDB;

